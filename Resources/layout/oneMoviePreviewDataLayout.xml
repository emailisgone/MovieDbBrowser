<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="120dp"
        android:layout_height="150dp"
        android:id="@+id/posterImage"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:scaleType="fitXY"
        />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="35dp"
        android:id="@+id/titleTxt"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/posterImage"
        android:textSize="25dp"
        android:text="Sample Title"
        android:ellipsize="end"
        android:maxLines="1"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/previewDescriptionTxt"
        android:textSize="17dp"
        android:layout_toRightOf="@id/posterImage"
        android:layout_below="@id/titleTxt"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="15dp"
        android:text="Sampleoverviewabc123hhhhhhkappahyftgdfsdds"
        android:singleLine="false"
        android:maxLines="6"/>


    <!--<ImageView
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:id="@+id/favoritesIndicator"
        android:src="@drawable/ic_favoritedMovie"
        android:layout_below="@id/posterImage"
        android:layout_alignParentRight="true"
        android:visibility="invisible"/>-->


</RelativeLayout>
